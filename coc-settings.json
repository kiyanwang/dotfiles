{
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.openAction.for.directory": "none",
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["wait","expanded?", "collapse", "expand", "open"],
    "v": "open:vsplit"
  },

  // html
  "html.filetypes": [
    "html",
    "handlebars"
  ]
}
